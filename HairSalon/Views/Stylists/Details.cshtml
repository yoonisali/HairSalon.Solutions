@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details:</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>

        @if (@Model.Clients.Count == 0)
        {
            <h3>This stylist has no clients yet!</h3><br>
        }
        else
        {
            <h3>Clients:</h3>
            <ul>
                @foreach (Client client in Model.Clients)
                {
                    <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
                }
            </ul>
        }

        @Html.ActionLink("Add a new Client", "Create", "Clients")<br>
        @Html.ActionLink("Edit Stylist!", "Edit", new { id = Model.StylistId })<br>
        @Html.ActionLink("Remove Stylist!", "Delete", new { id = Model.StylistId })<br>
        @Html.ActionLink("Back to the list!", "Index")