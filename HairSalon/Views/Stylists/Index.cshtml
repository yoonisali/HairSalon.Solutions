@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/index.css">

@using HairSalon.Models;

<h2>Stylists</h1>

<div class="contents">
    @if (@Model.Count == 0)
  {
    <h3>No stylists have been added!</h3>
  } 
      @foreach(Stylist stylist in Model)
    {
      <p>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</p>
    }

    <button>@Html.ActionLink("Add a new Stylist!", "Create")</button><br><br>
    @Html.ActionLink("Back home!", "Index", "Home")
</div>