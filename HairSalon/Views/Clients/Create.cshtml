@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>Add a new client!</h3>

<p><strong>NOTE:</strong> You need to have at least one stylist before you can add a new client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") to add a new stylist.</p>


@using (Html.BeginForm())
{
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", style = "text-align: center;"} )<br><br>
    @Html.TextBoxFor(model => model.Description, new { placeholder = "Description", style = "text-align: center;"} )<br><br>
   

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")<br>

    <input type="submit" value="Add a client" class="btn btn-dark" />
}
<p>@Html.ActionLink("Show all clients!", "Index")</p>